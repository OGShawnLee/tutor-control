<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="container" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="720.0" prefWidth="1280.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="daima.gui.controller.LandingAdminController">
  <children>
    <!-- User Info and Logout -->
    <VBox layoutY="604.0" prefWidth="320.0" spacing="16.0">
      <children>
        <Label fx:id="labelEmail" styleClass="title" text="\@Correo Electrónico">
          <VBox.margin>
            <Insets/>
          </VBox.margin>
          <padding>
            <Insets bottom="8.0"/>
          </padding>
        </Label>
        <HBox maxWidth="1.7976931348623157E308" spacing="16.0">
          <children>
            <Button mnemonicParsing="false" onAction="#onClickLogOut" prefWidth="140.0" styleClass="button"
                    text="Cerrar Sesión"/>
            <Button mnemonicParsing="false" onAction="#onClickManageProfile" prefWidth="140.0"
                    text="Gestionar Cuenta"/>
          </children>
        </HBox>
      </children>
      <padding>
        <Insets bottom="32.0" left="32.0"/>
      </padding>
    </VBox>
    <!-- Main Actions -->
    <VBox layoutX="475.0" layoutY="200.0" prefWidth="330.0" spacing="16.0">
      <children>
        <!-- Staff List -->
        <HBox maxWidth="-Infinity" prefHeight="32.0" spacing="16.0">
          <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                  onAction="#onClickReviewStaffList" prefWidth="160.0" styleClass="button"
                  text="Trabajadores"/>
          <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickRegisterStaff"
                  prefWidth="160.0" styleClass="button" text="Registrar Trabajador"/>
        </HBox>
        <!-- Tutored List -->
        <HBox maxWidth="-Infinity" prefHeight="32.0" spacing="16.0">
          <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                  onAction="#onClickReviewTutoredList" prefWidth="160.0" styleClass="button"
                  text="Tutorados"/>
          <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickRegisterTutored"
                  prefWidth="160.0" styleClass="button" text="Registrar Tutorado"/>
        </HBox>
      </children>
    </VBox>
  </children>
</AnchorPane>
